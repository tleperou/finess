---
import IconBrowserChrome from './icons/icon-browser-chrome.astro'
import IconBrowserEdge from './icons/icon-browser-edge.astro'
import IconBrowserFirefox from './icons/icon-browser-firefox.astro'
import IconBrowserSafari from './icons/icon-browser-safari.astro'
import IconCheckmark from './icons/icon-checkmark.astro'
---

<details>
  <summary>
    <h2>Interop 2022</h2>
    <ul>
      <li>
        <IconBrowserChrome />
        <IconCheckmark />
        <IconBrowserEdge />
        <IconCheckmark />
      </li>
      <li>
        <IconBrowserFirefox />
        <IconCheckmark />
      </li>
      <li>
        <IconBrowserSafari />
        <IconCheckmark />
      </li>
    </ul>
  </summary>
  <p>
    Since April 2024, this feature works across the latest devices and browser
    versions. This feature might not work in older devices or browsers.
  </p>
  <ul
    role="list"
    aria-orientation="horizontal"
  >
    <li><a href="#">Learn more</a></li>
    <li><a href="#">See full compatibility</a></li>
    <li><a href="#">Report feedback</a></li>
  </ul>
</details>

<style>
  details {
    --banner-color-1: var(--color-neutral-1);
    --banner-color-2: var(--color-neutral-2);
    --banner-color-3: var(--color-neutral-3);

    background-color: var(--banner-color-2);
    border-color: var(--banner-color-3);
    border-radius: var(--border-radius-2);

    & summary {
      display: flex;
      flex-wrap: wrap;
      border-color: var(--banner-color-2);

      &::after {
        margin-inline-start: var(--margin-inline-1);
      }
    }

    & > * {
      margin: var(--padding-1);
    }

    & ul {
      display: flex;
      flex-wrap: wrap;
      column-gap: var(--column-gap-2);
    }
  }

  details summary {
    & ul,
    & li {
      display: flex;
      align-items: center;
    }

    & ul {
      list-style: none;
      padding-inline-start: 0;
      column-gap: var(--margin-inline-1);
      margin-inline-start: auto;

      & li {
        --space-multiplier: 0.5;
        padding: var(--padding-block-1) var(--padding-inline-2);
        background-color: var(--banner-color-1);
        border-radius: var(--border-radius-round);
      }
    }

    & svg {
      inline-size: 2rem;
      block-size: auto;
      aspect-ratio: var(--aspect-ratio-square);
    }

    & svg:nth-child(even) {
      border: var(--border-width-2) solid var(--banner-color-1);
      background-color: var(--banner-color-1);
      border-radius: var(--border-radius-round);
      margin-inline-start: calc(-1.165 * var(--margin-inline-1));
    }

    & svg:not(:nth-child(even)) {
      z-index: var(--z-index-1);
      border-radius: var(--border-radius-round);
      background-color: var(--banner-color-1);
      border: var(--border-width-2) solid var(--banner-color-1);
    }
  }
</style>
