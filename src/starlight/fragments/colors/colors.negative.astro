---
import ColorPicker from './colors.picker.astro'
import ContrastPicker from './contrast.picker.astro'
---

<slot />

<details open>
  <summary class="sr-only">Customise negative</summary>
  <ul role="list">
    <li>
      --color-negative
      <span
        dir="auto"
        data-color="--color-negative"
        data-color-space="p3"
      ></span>
    </li>
    <li>
      --color-negative-hex
      <span dir="auto">
        <ColorPicker color="--color-negative" />
        <span data-color="--color-negative"></span>
      </span>
    </li>
    <li>
      --color-negative-contrast
      <span dir="auto">
        <ContrastPicker contrast="--color-negative-contrast" />
        <span data-contrast="--color-negative-contrast"></span>
      </span>
    </li>
  </ul>
</details>
