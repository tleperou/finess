---
const { hasSidebar } = Astro.props
---

<header>
  <slot name="header" />
</header>

{
  hasSidebar && (
    <aside>
      <slot name="sidebar" />
    </aside>
  )
}

<slot />

<style>
  header {
    border: 1px solid red;

    padding: var(--padding-1);
    margin: var(--margin-1);

    font-family: var(--font-sans);
    font-size: var(--font-size-1);
    line-height: var(--line-height-1);
  }
</style>
