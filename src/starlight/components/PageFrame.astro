---
const { hasSidebar } = Astro.props
---

<div>
  <header>
    <slot name="header" />
  </header>

  {
    hasSidebar && (
      <nav>
        <slot name="sidebar" />
      </nav>
    )
  }

  <slot />
</div>

<style>
  div {
    display: grid;
    grid-template-columns: 300px 1fr;
    grid-template-rows: auto 1fr;
    column-gap: var(--column-gap-2);

    max-block-size: 100dvh;
  }

  header {
    display: flex;
    align-items: center;
    grid-column: 1 / -1;
    grid-row: 1;
    column-gap: var(--column-gap-2);
    padding: var(--padding-1);
    margin: var(--margin-1);
  }

  nav {
    grid-column: 1;
    grid-row: 2;
  }

  main {
    grid-column: 2;
    grid-row: 2;
  }
</style>
