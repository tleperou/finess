---
const { hasSidebar } = Astro.props
---

<!-- <slot name="header" /> -->
<header class="surface-1">
  <p>--color-surface-1</p>
  <div class="surface-2">
    <p>--color-surface-2</p>
    <div class="surface-3">
      <p>--color-surface-3</p>
      <div class="surface-4">
        <p>--color-surface-4</p>
        <div class="surface-5">
          <p>--color-surface-5</p>
        </div>
      </div>
    </div>
  </div>
</header>

<header class="neutral-1">
  <p>--color-neutral-1</p>
  <div class="neutral-2">
    <p>--color-neutral-2</p>
    <div class="neutral-3">
      <p>--color-neutral-3</p>
      <div class="neutral-4">
        <p>--color-neutral-4</p>
        <div class="neutral-5">
          <p>--color-neutral-5</p>
        </div>
      </div>
    </div>
  </div>
</header>

<header class="positive-1">
  <p>--color-positive-1</p>
  <div class="positive-2">
    <p>--color-positive-2</p>
    <div class="positive-3">
      <p>--color-positive-3</p>
      <div class="positive-4">
        <p>--color-positive-4</p>
        <div class="positive-5">
          <p>--color-positive-5</p>
        </div>
      </div>
    </div>
  </div>
</header>

<header class="negative-1">
  <p>--color-negative-1</p>
  <div class="negative-2">
    <p>--color-negative-2</p>
    <div class="negative-3">
      <p>--color-negative-3</p>
      <div class="negative-4">
        <p>--color-negative-4</p>
        <div class="negative-5">
          <p>--color-negative-5</p>
        </div>
      </div>
    </div>
  </div>
</header>

{
  hasSidebar && (
    <aside>
      <slot name="sidebar" />
    </aside>
  )
}

<slot />

<style>
  :global(html) {
    /* overrides */

    /* --color-surface: color(display-p3 0 0.0001 0.01);
    --color-surface-mix: lightblue; */

    /* --color-neutral: red;
    --color-neutral-mix: pink; */
  }
  header {
    /* colors surface */

    &.surface-1 {
      background-color: var(--color-surface-1);
    }

    & div {
      padding: var(--padding-1);
      margin-block-start: var(--space-block-1);
    }

    & div.surface-2 {
      background-color: var(--color-surface-2);
    }

    & div.surface-3 {
      background-color: var(--color-surface-3);
    }

    & div.surface-4 {
      background-color: var(--color-surface-4);
    }

    & div.surface-5 {
      background-color: var(--color-surface-5);
    }

    /* color neutral */

    &.neutral-1 {
      background-color: var(--color-neutral-1);
    }

    & div.neutral-2 {
      background-color: var(--color-neutral-2);
    }

    & div.neutral-3 {
      background-color: var(--color-neutral-3);
    }

    & div.neutral-4 {
      background-color: var(--color-neutral-4);
    }

    & div.neutral-5 {
      background-color: var(--color-neutral-5);
    }

    /* color positive */

    &.positive-1 {
      background-color: var(--color-positive-1);
    }

    & div.positive-2 {
      background-color: var(--color-positive-2);
    }

    & div.positive-3 {
      background-color: var(--color-positive-3);
    }

    & div.positive-4 {
      background-color: var(--color-positive-4);
    }

    & div.positive-5 {
      background-color: var(--color-positive-5);
    }

    /* color negative */

    &.negative-1 {
      background-color: var(--color-negative-1);
    }

    & div.negative-2 {
      background-color: var(--color-negative-2);
    }

    & div.negative-3 {
      background-color: var(--color-negative-3);
    }

    & div.negative-4 {
      background-color: var(--color-negative-4);
    }

    & div.negative-5 {
      background-color: var(--color-negative-5);
    }

    /* spacings */

    padding: var(--padding-1);
    margin: var(--margin-1);

    font-family: var(--font-sans);
    font-size: var(--font-size-1);
    line-height: var(--line-height-1);
    letter-spacing: var(--letter-spacing-1);

    z-index: var(--z-index-1);

    /* layers */
    &::before {
      z-index: var(--z-index-01);
    }
  }
</style>
